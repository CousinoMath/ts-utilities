{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/es5/types/",
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./dist/es5",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["jest", "node"]
  },
  "exclude": [
    "./**/*.spec.ts",
    "./src/playground/**/*.ts"
  ],
  "files": ["./src/index.ts"],
  "include": ["src/**/*"]
}
